<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/student_item_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:maxWidth="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/student_item_course"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:text="@string/course"
        android:textColor="@color/colorText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/student_item_course_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/student_item_course"
        android:layout_alignBottom="@+id/student_item_course"
        android:layout_toRightOf="@+id/student_item_course"
        android:layout_toEndOf="@+id/student_item_course" />

    <TextView
        android:id="@+id/student_item_surname"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:maxWidth="200dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="TextView"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/student_item_name"
        android:layout_toEndOf="@+id/student_item_name" />

    <com.students.customView.ExamResultView
        android:id="@+id/student_item_exam_result"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/student_item_course_text"    
        android:layout_toEndOf="@+id/student_item_course_text"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp" />

    <View
        android:id="@+id/student_item_breakLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/breakLineColor" />

    <ImageView
        android:id="@+id/student_item_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/delete_ico"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>